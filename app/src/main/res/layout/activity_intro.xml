<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="dev.boby.ricks.intro.IntroActivity">


    <TextView
        android:id="@+id/initial_0"
        android:layout_width="48sp"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:gravity="center"
        android:maxLength="1"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/initial_1"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.314" />

    <ImageView
        android:id="@+id/pickle_0"
        android:src="@drawable/pickle_rick"
        android:layout_width="42dp"
        app:layout_constraintTop_toTopOf="@id/initial_0"
        app:layout_constraintBottom_toBottomOf="@id/initial_0"
        app:layout_constraintStart_toStartOf="@id/initial_0"
        app:layout_constraintEnd_toEndOf="@id/initial_0"
        android:layout_height="42dp" />

    <View
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_marginTop="2dp"
        android:background="@color/black"
        app:layout_constraintEnd_toEndOf="@id/initial_0"
        app:layout_constraintStart_toStartOf="@id/initial_0"
        app:layout_constraintTop_toBottomOf="@id/initial_0" />

    <TextView
        android:id="@+id/initial_1"
        android:layout_width="48sp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:gravity="center"
        android:textColor="@color/black"
        android:maxLength="1"

        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline3"
        app:layout_constraintEnd_toStartOf="@id/initial_2"
        app:layout_constraintStart_toEndOf="@id/initial_0"
        app:layout_constraintTop_toTopOf="@id/initial_0" />

    <ImageView
        android:id="@+id/pickle_1"
        android:src="@drawable/pickle_rick"
        android:layout_width="42dp"
        app:layout_constraintTop_toTopOf="@id/initial_1"
        app:layout_constraintBottom_toBottomOf="@id/initial_1"
        app:layout_constraintStart_toStartOf="@id/initial_1"
        app:layout_constraintEnd_toEndOf="@id/initial_1"
        android:layout_height="42dp" />

    <View
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_marginTop="2dp"
        android:background="@color/black"
        app:layout_constraintEnd_toEndOf="@id/initial_1"
        app:layout_constraintStart_toStartOf="@id/initial_1"
        app:layout_constraintTop_toBottomOf="@id/initial_1" />

    <TextView
        android:id="@+id/initial_2"
        android:layout_width="48sp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:textColor="@color/black"
        android:gravity="center"
        android:maxLength="1"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/initial_1"
        app:layout_constraintTop_toTopOf="@id/initial_0" />

    <ImageView
        android:id="@+id/pickle_2"
        android:src="@drawable/pickle_rick"
        android:layout_width="42dp"
        app:layout_constraintTop_toTopOf="@id/initial_2"
        app:layout_constraintBottom_toBottomOf="@id/initial_2"
        app:layout_constraintStart_toStartOf="@id/initial_2"
        app:layout_constraintEnd_toEndOf="@id/initial_2"
        android:layout_height="42dp" />

    <View
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_marginTop="2dp"
        android:background="@color/black"
        app:layout_constraintEnd_toEndOf="@id/initial_2"
        app:layout_constraintStart_toStartOf="@id/initial_2"
        app:layout_constraintTop_toBottomOf="@id/initial_2" />


    <TextView
        android:id="@+id/message"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:alpha="0.67"
        android:gravity="center"
        android:text="@string/enter_your_name"

        android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/initial_0" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/keyboard"
        android:layout_width="0dp"
        android:layout_height="72dp"
        android:background="@color/gray"
        app:layout_constraintBottom_toBottomOf="parent"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/key_0"
            android:layout_width="36dp"
            android:layout_height="wrap_content"
            android:alpha="0.72"
            android:background="?android:selectableItemBackgroundBorderless"
            android:clickable="true"
            android:gravity="center"

            android:text="A"
            android:textColor="@color/black"
            android:textSize="34sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/key_1"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/key_1"
            android:layout_width="36dp"
            android:layout_height="wrap_content"

            android:alpha="0.72"
            android:background="?android:selectableItemBackgroundBorderless"
            android:clickable="true"
            android:gravity="center"
            android:text="B"
            android:textColor="@color/black"
            android:textSize="34sp"
            app:layout_constraintEnd_toStartOf="@id/key_2"
            app:layout_constraintStart_toEndOf="@id/key_0"
            app:layout_constraintTop_toTopOf="@id/key_0" />

        <TextView
            android:id="@+id/key_2"
            android:layout_width="36dp"
            android:layout_height="wrap_content"

            android:alpha="0.72"
            android:background="?android:selectableItemBackgroundBorderless"
            android:clickable="true"
            android:gravity="center"
            android:text="C"
            android:textColor="@color/black"
            android:textSize="34sp"
            app:layout_constraintEnd_toStartOf="@id/refresh"
            app:layout_constraintStart_toEndOf="@id/key_1"
            app:layout_constraintTop_toTopOf="@id/key_0" />

        <ImageView
            android:id="@+id/refresh"
            android:layout_width="36dp"
            android:layout_height="0dp"

            android:alpha="0.72"
            android:background="?android:selectableItemBackgroundBorderless"
            android:clickable="true"
            android:src="@drawable/baseline_refresh_24"
            android:tint="@color/black"
            app:layout_constraintBottom_toBottomOf="@id/key_0"
            android:padding="4dp"
            app:layout_constraintEnd_toStartOf="@id/backspace"
            app:layout_constraintStart_toEndOf="@id/key_2"
            app:layout_constraintTop_toTopOf="@id/key_0" />


        <ImageView
            android:id="@+id/backspace"
            android:layout_width="36dp"
            android:layout_height="0dp"

            android:alpha="0.72"
            android:background="?android:selectableItemBackgroundBorderless"
            android:clickable="true"
            android:src="@drawable/baseline_backspace_24"
            android:tint="@color/black"
            app:layout_constraintBottom_toBottomOf="@id/key_0"
            android:padding="4dp"

            app:layout_constraintStart_toEndOf="@id/refresh"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/key_0" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/play_button"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/play"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/message"
        app:layout_constraintVertical_bias="0"
        app:strokeColor="@color/black"
        app:strokeWidth="2dp" />


</androidx.constraintlayout.widget.ConstraintLayout>